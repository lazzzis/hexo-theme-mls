<article class="article-full">

    <!-- Title -->
    <h2 class="blog-item-title">
        <a href="<%- config.root %><%- item.path %>">
            <%- item.title || item.link%>
        </a>
    </h2>

    <!-- Date and Author -->
    <p class="blog-item-meta">
        Published on <%= item.date.format("YYYY MMM DD HH:mm:ss") %>
        <% if(item.author) { %>
        by <%- item.author %>
        <% } %>
    
        </br>
        Last Updated on <%= item.updated.format("YYYY MMM DD HH:mm:ss") %>
        <% if(item.author) { %>
        by <%- item.author %>
        <% } %>
    </p>


    <!-- Content -->
    <%- item.content %>

    <hr/>

    <% if (theme.share_disabled) {%>
        <div class="social-share" data-disabled="<%= theme.share_disabled %>"></div>
    <%} else { %>
        <div class="social-share"></div>
    <%}%>

    <%- partial('comments') %>

    <!-- Tags and Categories links -->


</article>
