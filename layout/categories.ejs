<%
var title = 'Tags';
if (page.category) title = page.category;
if (page.tag) title = page.tag;
%>

<% var i = 0; %>

<% site.categories.sort('name').each(function(item){
    if (i % 3 == 0) { %>
        <div class="row">
            <% }%>

            <div class="col s12 m4 l4">
                <article class="tag-item">
                    <h4> <a href="<%- config.root %><%- item.path %>"> <%- item.name %> </a></h4>
                </article>
            </div>
    <% if (i % 3 == 2) {%>

        </div>
    <%}%>
    <% i++; %>
<% }); %>

<% if ((i - 1) % 3 != 2) {%>
    </div>
<%}%>
